{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": false
  },
  "exclude": ["node_modules"],
  "files": ["./hardhat.config.ts"],
  "include": ["tasks/**/*", "test/**/*", "scripts/**/*", "./typechain", "utils/**/*"]
}
